alias who='who -u'
alias hostnamechange='hostnamectl set-hostname'

alias cal='ncal -M -b'
alias locate='locate --database=/tmp/locate.db'
alias path='echo -e ${PATH//:/\\n}'

if command -v bat &>/dev/null; then
    alias cat='bat'
fi

# Repeat last command with sudo privileges.
