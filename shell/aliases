if [[ -n $ZDOTDIR ]]; then
    alias reload="source ~/.config/shell/zshrc"
else
    alias reload="source ~/.config/shell/bashrc"
fi

alias :q='exit'
alias cd..='cd ..'
alias ..='cd ..'

alias ls='ls --group-directories-first --color=auto -q'
alias la='ls -Av'
alias ll='la -hl'
alias l='ll'
