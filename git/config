# File:   ~/.config/git/config
# Author: Marco Plaitano
# Github: https://github.com/marcoplaitano


[alias]
    # Print all aliases
    aliases = config --get-regexp alias
    # Allow `$ git git git...`
    git = !exec git
    authors = shortlog --summary --numbered --email --all
    hist = log --graph --abbrev-commit --branches --pretty=oneliner
    info = status -s
    branches = branch --all
    # Show last commit
    last = log -1 HEAD
    # Remove added file
    remove = restore --staged
    # Undo last commit
    undo = reset --soft HEAD~1
    # Discard local changes to a file
    discard = restore
    # Preview changes before pull
    preview = log -p HEAD..origin/main
    # Show last commit message
    message = log --format=medium -1
    # Reset files permissions
    permission-reset = !git diff -p -R --no-ext-diff --no-color --diff-filter=M | grep -E \"^(diff|(old|new) mode)\" --color=never | git apply

[branch]
    # Show most recently changed branches first.
    sort = -committerdate

[color]
    # Enable colored output in terminal.
    ui = auto

[color "branch"]
    current = green bold
    local = green
    remote = yellow

[color "diff"]
    meta = 11
    frag = magenta bold
    commit = yellow bold
    old = red bold
    new = green bold
    whitespace = red reverse

[color "status"]
    added = green bold
    changed = yellow bold
    untracked = blue bold

[commit]
    # Sign commits by default.
    gpgsign = true
    template = ~/.config/git/message

[core]
    excludesfile = ~/.config/git/ignore
    editor = nvim
    pager = less
    # Speed up commands like status.
    untrackedCache = true

[credential]
    helper = /usr/share/doc/git/contrib/credential/netrc/git-credential-netrc.perl -f ~/.local/share/passwords/github/token-marcoplaitano.gpg

[format]
    graph = true

[help]
    # Automatically correct and execute mistyped commands.
    autocorrect = 50

[init]
    defaultBranch = main

[log]
    date = format-local:%Y-%m-%d %H:%M

[pretty]
    oneliner = format:%C(yellow)%h%C(reset) %C(bold blue)<%an>%C(reset) %C(green)(%ad)%C(reset) - %s%C(bold magenta)%d%C(reset)
    nocolor = format:%h%d (%ad) <%an> - %s

[push]
    default = current

[user]
    name = Marco Plaitano
    email = marcoplaitano23@gmail.com

[includeIf "gitdir:~/dev/blog/"]
    path = ~/dev/blog/.gitconfig
